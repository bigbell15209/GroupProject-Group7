<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>


<br><br>

<div class="position-relative p-3 p-md-1 m-md-5 text-center background4 text1">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <h1 class="display-4 font-weight-normal">Welcome to <br> K Survey</h1>
      <p class="lead font-weight-normal"> This survey site is created for the group project. All the functions in this site are made by students. You can see the participants at 'About Us' page.</p>
      <a class="btn btn-outline-secondary" href="/survey-list">Create Survey</a>
    </div>
    <h1>Come and join the survey</h1>
</div>

 <div class="container">
    <div class="row">

<table class="table table-bordered table-striped table-hover">
     <!-- Header Row -->
     <tr>
     <th class="text-center ">No.</th>
     <th class="text-center ">Survey Title</th>
     <th class="text-center ">Creator</th>
     <th class="text-center "></th>
     </tr>

     <!-- Repeatable Template Row -->
     <% for(let count = 0; count < SurveyList.length; count++) { %>
         
         <tr>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= count + 1 %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= SurveyList[count].title %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= SurveyList[count].writer %>&nbsp;&nbsp;&nbsp;&nbsp;</td>     
         <td class="text-center ">
         <a href="/participate/<%= SurveyList[count]._id %>" class="btn btn-outline-primary btn-sm" role="button">
         <i class="far fa-edit"></i> Answer the Survey </a>
         </td> 
         </tr>

     <% } %>

   </table>

</div>
</div>


