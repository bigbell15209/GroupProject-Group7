<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>


<!-- Main Content -->
<div id="partbody">
  <div class="row justify-content-md-center">
  <div class="col-8">
  <br>
  <h2 class="display-3 text-center" style="color:#453D30; font-family: Garamond;">Participate Survey</h2>
  <hr class="my-4">
  </div>
  </div>
  <br>
  <div class="row justify-content-md-center">
  <div class="col-md-offset-3 col-md-8">

  <form class="form" method="POST">

      <div class="form-group">
      <label for="titleTextField" style="color:#453D30; font-family: Garamond;"><h3><b>Survey Title:</b></h3></label>

      <input type="text" class="form-control" id="titleTextField" style="background-color:#453D30; color:white;" 
      name="title" 
      value="<%= SurveyList.title %>"
      readonly>
      <br>
      

      
     
   <table class="table table-bordered table-striped table-hover" style="background-color: #DEE7E6">
     <!-- Header Row -->
     <tr style="color:#453D30; font-family: Garamond;">
     <th class="text-center ">No.</th>
     <th class="text-center ">Question</th>
     <th class="text-center ">Answer</th>
     </tr>

     <!-- Repeatable Template Row -->
         
         <tr>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;1&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= SurveyList.question1 %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">
              <input type="radio" id="true" name="tf" value="true">
              <label for="true">True</label>
              <input type="radio" id="false" name="tf" value="false">
              <label for="false">False</label>
         </td>
         </tr>

         <tr>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;2&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= SurveyList.question2 %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">
              <input type="radio" id="true" name="tf2" value="true">
              <label for="true">True</label>
              <input type="radio" id="false" name="tf2" value="false">
              <label for="false">False</label>
         </td>
         </tr>

         <tr>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;3&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= SurveyList.question3 %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">
              <input type="radio" id="true" name="tf3" value="true">
              <label for="true">True</label>
              <input type="radio" id="false" name="tf3" value="false">
              <label for="false">False</label>
         </td>
         </tr>


   </table>

  <button type="submit" class="btn" style="background-color:#AD6D52; color:white; font-family: Garamond; font-size: 20px"><b>Submit</b></button>
  <a href="/" class="btn btn-outline-secondary" style="background-color:#A8A07C; color:white; font-family: Garamond; font-size: 20px">
      <i class="fas fa-undo" ></i><b> Back </b></a>
      </div>

  </form>


  </div>
  </div>

  </main>

</div>    
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>