<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>


<br><br><br><br>
<!-- Main Content -->
  <div class="row justify-content-md-center">
  <div class="col-8">
  <h2 class="display-3 text-center">Participate Survey</h2>
  <hr class="my-4">
  </div>
  </div>
  <br>
  <div class="row justify-content-md-center">
  <div class="col-md-offset-3 col-md-8">

  <form class="form" method="POST">

      <div class="form-group">
      <label for="titleTextField"><h3>Survey Title: </h3></label>
      

      
     
   <table class="table table-bordered table-striped table-hover">
     <!-- Header Row -->
     <tr>
     <th class="text-center ">No.</th>
     <th class="text-center ">Question</th>
     <th class="text-center ">Answer</th>
     </tr>

     <!-- Repeatable Template Row -->
     <% for(let count = 0; count < SurveyList.length; count++) { 
         if(SurveyList[count].writer === ids){%>
         
         <tr>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= count + 1 %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">&nbsp;&nbsp;&nbsp;&nbsp;<%= SurveyList[count].question %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
         <td class="text-center ">
              <input type="radio" id="true" name="tf" value="true">
              <label for="true">True</label>
              <input type="radio" id="false" name="tf" value="false">
              <label for="false">False</label>
         </td>
         </tr>

     <% }} %>

   </table>

  <button type="submit" class="btn btn-outline-primary">Submit</button>
  <a href="/" class="btn btn-outline-secondary">
      <i class="fas fa-undo"></i> Back </a>
      </div>

  </form>


  </div>
  </div>

  </main>
