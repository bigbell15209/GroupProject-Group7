    data: {
        labels: ['True','False',],
        datasets: [{
            label: 'Question1',
            data: [<%= tf1T %>,<%= tf1F %>],
            backgroundColor: [
                'rgba(155, 226, 239, 1)',
                'rgba(260, 229, 232, 1)',

            ],
            borderColor: [
              'rgba(155, 226, 239, 1)',
                'rgba(260, 229, 232, 1)',
        
            ],
