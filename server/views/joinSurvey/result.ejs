var myChart3 = new Chart(ctx3, {
    type: 'pie',
    data: {
        labels: ['True','False',],
        datasets: [{
            label: 'Question3',
            data: [<%= tf3T %>,<%= tf3F %>],
            backgroundColor: [
                'rgba(155, 226, 239, 1)',
                'rgba(260, 229, 232, 1)',

            ],
            borderColor: [
              'rgba(155, 226, 239, 1)',
                'rgba(260, 229, 232, 1)',          
