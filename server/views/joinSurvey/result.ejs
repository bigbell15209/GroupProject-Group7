<%- include ../partials/main_nav.ejs %>

<div class="row justify-content-md-center">
  <div class="col-8">
    <p href="" class="typewrite text-center display-2 " data-period="2000" data-type='[ "Result", "Result", "Result", "Result" ]'>
        <span class="wrap"></span>
