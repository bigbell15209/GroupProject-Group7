<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

   <br><br><br><br>
  <div class="row justify-content-md-center">
  
    <div class="col-8">
    <h2 class="display-4 text-center" style="font-family: Garamond;">Edit Question</h2>
    <hr class="my-4">
    </div>
  </div>

  <div class="container" id="forms">
    <div class="row">
      <div class="offset-md-3 col-md-6">
  

      <form class="form" method="POST">

      <div class="form-group">
      <label for="titleTextField">Title</label>
      <input type="text" class="form-control" id="titleTextField" 
      name="title" 
      value="<%= survey.title %>"
      required>
      </div>

      <div class="form-group">
      <label for="questionNumTextField">Question Number</label>
      <input type="number" class="form-control" id="questionNumTextField" 
      name="questionNum1" 
      value="<%= survey.questionNum1 %>"
      required>
      </div>

      <div class="form-group">
      <label for="numberTextField">Question</label>
      <input type="text" class="form-control" id="questionTextField" 
      name="question1" 
      value="<%= survey.question1 %>"
      required>
      </div>

      <div class="form-group">
      <label for="questionTypeTextField">Question Type</label>
      <br>
      <input type="radio" class="" id="questionType" 
      name="questionType1" value="<%= survey.questionType1 %>" checked required> 
      <label for="TF">True & False</label>
      </div>

      <div class="form-group">
      <label for="questionNumTextField">Question Number</label>
      <input type="number" class="form-control" id="questionNumTextField" 
      name="questionNum2" 
      value="<%= survey.questionNum2 %>"
      required>
      </div>

      <div class="form-group">
      <label for="numberTextField">Question</label>
      <input type="text" class="form-control" id="questionTextField" 
      name="question2" 
      value="<%= survey.question2 %>"
      required>
      </div>

      <div class="form-group">
      <label for="questionTypeTextField">Question Type</label>
      <br>
      <input type="radio" class="" id="questionType" 
      name="questionType2" value="<%= survey.questionType2 %>" checked required> 
      <label for="TF">True & False</label>
      </div>

      <div class="form-group">
      <label for="questionNumTextField">Question Number</label>
      <input type="number" class="form-control" id="questionNumTextField" 
      name="questionNum3" 
      value="<%= survey.questionNum3 %>"
      required>
      </div>

      <div class="form-group">
      <label for="numberTextField">Question</label>
      <input type="text" class="form-control" id="questionTextField" 
      name="question3" 
      value="<%= survey.question3 %>"
      required>
      </div>

      <div class="form-group">
      <label for="questionTypeTextField">Question Type</label>
      <br>
      <input type="radio" class="" id="questionType" 
      name="questionType3" value="<%= survey.questionType3 %>" checked required> 
      <label for="TF">True & False</label>
      </div>

      
      <br>
      <button class="btn btn-outline-primary" type="submit">Submit</button>
      &nbsp;
      <a href="/survey-list" class="btn btn-outline-secondary">
      <i class="fas fa-undo"></i> Back </a>

      </form>

      </div>
    </div>
  </div>
  <br><br><br><br>




